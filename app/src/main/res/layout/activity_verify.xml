<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.forgotpassword.VerifyActivity">

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/verifikasi_code"
        android:textSize="35sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        android:textColor="?attr/font_color"
        android:fontFamily="@font/urbold"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tolong_check_email_kamu"
        android:textSize="18sp"
        android:textColor="?attr/font_color"
        android:layout_marginBottom="24dp"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginBottom="32dp">

        <EditText
            android:id="@+id/etCode1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:autofillHints="@string/label"
            android:background="@drawable/rounded_border_inline"
            android:gravity="center"
            android:inputType="number"
            android:textSize="25sp"
            android:maxLength="1"
            android:imeOptions="actionNext"
            android:hint="@string/label" />

        <!-- Space -->
        <Space
            android:layout_width="12dp"
            android:layout_height="0dp" />

        <!-- Code Box 2 -->
        <EditText
            android:id="@+id/etCode2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:autofillHints="@string/label"
            android:background="@drawable/rounded_border_inline"
            android:gravity="center"
            android:inputType="number"
            android:textSize="25sp"
            android:maxLength="1"
            android:imeOptions="actionNext"
            android:hint="@string/label" />

        <!-- Space -->
        <Space
            android:layout_width="12dp"
            android:layout_height="0dp" />

        <!-- Code Box 3 -->
        <EditText
            android:id="@+id/etCode3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:autofillHints="@string/label"
            android:background="@drawable/rounded_border_inline"
            android:gravity="center"
            android:inputType="number"
            android:textSize="25sp"
            android:maxLength="1"
            android:imeOptions="actionNext"
            android:hint="@string/label" />

        <!-- Space -->
        <Space
            android:layout_width="12dp"
            android:layout_height="0dp" />

        <!-- Code Box 4 -->
        <EditText
            android:id="@+id/etCode4"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:autofillHints="@string/label"
            android:background="@drawable/rounded_border_inline"
            android:gravity="center"
            android:inputType="number"
            android:textSize="25sp"
            android:maxLength="1"
            android:imeOptions="actionDone"
            android:hint="@string/label" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_verify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="?attr/colorPrimary"
        android:text="@string/verify"
        android:textColor="@android:color/white"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/urbold"
        android:layout_marginTop="40dp"/>

</LinearLayout>