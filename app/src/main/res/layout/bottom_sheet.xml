<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/bottomSheet"
    android:background="#00000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bg_sheet">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="6dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/handler"
        android:src="@drawable/baseline_remove_24"
        android:layout_gravity="center|top"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/title_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:text="@string/title_sheet"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/urbold"
        android:textColor="?attr/font_color"/>

    <TextView
        android:id="@+id/desc_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:text="@string/dummy_text"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/urmedium"
        android:textColor="?attr/font_color"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingVertical="30dp">

            <!-- kalori-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingHorizontal="3dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/rounded_border_inline"
                    android:layout_marginHorizontal="5dp"
                    android:padding="15dp">

                    <ImageView
                        android:id="@+id/icon_kalori"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_fire"
                        android:contentDescription="@string/kalori_logo" />

                    <TextView
                        android:id="@+id/tv_kalori"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="30sp"
                        android:text="@string/dummy_sheet"
                        android:fontFamily="@font/urbold"
                        android:textColor="?attr/font_color" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="@string/kalori"
                    android:fontFamily="@font/urmedium"
                    android:textColor="?attr/font_color" />
            </LinearLayout>

            <!-- Protein -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingHorizontal="3dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/rounded_border_inline"
                    android:layout_marginHorizontal="5dp"
                    android:padding="15dp">

                    <ImageView
                        android:id="@+id/icon_protein"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/ic_protein"
                        android:backgroundTint="@color/Primary"
                        android:contentDescription="@string/protein" />

                    <TextView
                        android:id="@+id/tv_protein"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="30sp"
                        android:text="@string/dummy_sheet"
                        android:fontFamily="@font/urbold"
                        android:textColor="?attr/font_color" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="@string/protein"
                    android:fontFamily="@font/urmedium"
                    android:textColor="?attr/font_color" />
            </LinearLayout>


<!--            -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingHorizontal="3dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/rounded_border_inline"
                    android:layout_marginHorizontal="5dp"
                    android:padding="15dp">

                    <ImageView
                        android:id="@+id/icon_karbohidrat"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/ic_karbo"
                        android:backgroundTint="@color/TersierVariant"
                        android:contentDescription="@string/carbo" />

                    <TextView
                        android:id="@+id/tv_karbohidrat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="30sp"
                        android:text="@string/dummy_sheet"
                        android:fontFamily="@font/urbold"
                        android:textColor="?attr/font_color" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="@string/karbohidrat"
                    android:fontFamily="@font/urmedium"
                    android:textColor="?attr/font_color" />
            </LinearLayout>


<!--            lemak-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingHorizontal="3dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/rounded_border_inline"
                    android:layout_marginHorizontal="5dp"
                    android:padding="15dp">

                    <ImageView
                        android:id="@+id/icon_lemak"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/ic_lemak"
                        android:backgroundTint="@color/Tersier"
                        android:contentDescription="@string/lemak" />

                    <TextView
                        android:id="@+id/tv_lemak"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="30sp"
                        android:text="@string/dummy_sheet"
                        android:fontFamily="@font/urbold"
                        android:textColor="?attr/font_color" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="@string/lemak"
                    android:fontFamily="@font/urmedium"
                    android:textColor="?attr/font_color" />
            </LinearLayout>
        </LinearLayout>

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/chart_sheet"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"/>

    </LinearLayout>

</LinearLayout>