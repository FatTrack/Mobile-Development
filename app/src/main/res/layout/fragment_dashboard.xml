<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    tools:context=".view.DashboardFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header: Week / Month -->
        <LinearLayout
            style="?android:attr/buttonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btn_week"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/week"
                android:backgroundTint="?attr/colorPrimary"
                android:textColor="@color/white"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btn_month"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/month"
                android:backgroundTint="@color/lightGray"
                android:textColor="@color/black" />
        </LinearLayout>

        <!-- Chart Section -->
        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/bar_chart"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:layout_marginBottom="16dp"
            android:background="@color/chart_background" />


        <!-- Riwayat Kalori Per Hari -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/riwayat_kalori_per_hari"
            android:textSize="16sp"
            android:textColor="?attr/font_color"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="8dp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Card Item 1 -->
                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/card_variant"
                        android:padding="16dp">

                        <!-- Tanggal -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/dummy_tgl"
                            android:textSize="12sp"
                            android:textColor="?attr/font_color"
                            android:layout_marginBottom="8dp" />

                        <!-- Row untuk ikon dan teks kalori -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            tools:ignore="UseCompoundDrawables">

                            <!-- Ikon Kalori -->
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_fire"
                                android:contentDescription="@string/kalori_logo"
                                android:layout_marginEnd="8dp" />

                            <!-- Teks Kalori -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/dummy_kalori"
                                android:textSize="20sp"
                                android:textColor="?attr/font_color"
                                android:fontFamily="sans-serif-medium" />
                        </LinearLayout>
                    </LinearLayout>

                <!-- Card Item 2 -->
                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/card_variant"
                        android:padding="16dp">

                        <!-- Tanggal -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/dummy_tgl"
                            android:textSize="12sp"
                            android:textColor="?attr/font_color"
                            android:layout_marginBottom="8dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            tools:ignore="UseCompoundDrawables">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_fire"
                                android:contentDescription="@string/kalori_logo"
                                android:layout_marginEnd="8dp" />

                            <!-- Teks Kalori -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/dummy_kalori"
                                android:textSize="20sp"
                                android:textColor="?attr/font_color"
                                android:fontFamily="sans-serif-medium" />
                        </LinearLayout>
                    </LinearLayout>

                <!-- Card Item 3 -->
                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/card_variant"
                        android:padding="16dp">

                        <!-- Tanggal -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/dummy_tgl"
                            android:textSize="12sp"
                            android:textColor="?attr/font_color"
                            android:layout_marginBottom="8dp" />

                        <!-- Row untuk ikon dan teks kalori -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            tools:ignore="UseCompoundDrawables">

                            <!-- Ikon Kalori -->
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_fire"
                                android:contentDescription="@string/kalori_logo"
                                android:layout_marginEnd="8dp" />

                            <!-- Teks Kalori -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/dummy_kalori"
                                android:textSize="20sp"
                                android:textColor="?attr/font_color"
                                android:fontFamily="sans-serif-medium" />
                        </LinearLayout>
                    </LinearLayout>

            </LinearLayout>
        </HorizontalScrollView>


        <!-- Riwayat Cek Kalori -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/riwayat_cek_kalori"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:textColor="?attr/font_color"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp"
                    android:textColor="?attr/font_color"
                    android:background="@drawable/card_variant"
                    android:padding="16dp"
                    tools:ignore="UselessParent">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:contentDescription="@string/dummy_makanan_name"
                        android:src="@drawable/sample_food"
                        android:scaleType="centerCrop"
                        android:layout_marginEnd="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="?attr/font_color"
                            android:text="@string/dummy_makanan_name"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/dummy_tgl"
                            android:textSize="12sp"
                            android:textColor="@color/gray"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/dummy_kalori"
                            android:textSize="16sp"
                            android:textColor="?attr/colorPrimary"
                            android:fontFamily="sans-serif-medium" />
                    </LinearLayout>
                </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
